<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ckFocus="tapWithMarker"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDarkTransparent"
        android:id="@+id/navigartionBarBg"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDarkTransparent"
        android:id="@+id/statusBarBg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:id="@+id/topControls"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:ico_color="@color/colorIcon"
        app:ico_icon="gmd-flash-off"
        app:ico_size="20dp"
        app:ico_contour_color="#000000"
        app:ico_contour_width="1px"
        android:id="@+id/toggleFlash"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="30dp"
        android:background="@color/colorPrimaryTransparent"
        android:id="@+id/camera_controls"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/showfrontcam"
            app:ico_color="@color/colorIcon"
            app:ico_icon="gmd-switch-camera"
            app:ico_size="20dp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:ico_color="@color/colorIcon"
            app:ico_icon="gmd-camera"
            app:ico_size="60dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickfromgallery"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:ico_color="@color/colorIcon"
            app:ico_icon="gmd-insert-drive-file"
            app:ico_size="20dp"
            android:padding="10dp"
            />
    </RelativeLayout>

</RelativeLayout>
