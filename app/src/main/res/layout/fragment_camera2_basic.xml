<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <in.dc297.artisticstyletransfer.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="30dp"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/showfrontcam"
            app:ico_color="@color/colorIcon"
            app:ico_icon="gmd-switch-camera"
            app:ico_size="20dp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:ico_color="@color/colorIcon"
            app:ico_icon="gmd-camera"
            app:ico_size="60dp"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickfromgallery"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:ico_color="@color/colorIcon"
            app:ico_icon="gmd-insert-drive-file"
            app:ico_size="20dp"
            android:padding="10dp"
            />
    </RelativeLayout>

</RelativeLayout>
